{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true, "single", "avoid-escape"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "ignore"
                }
            }
        ],
        "newline-before-return": true,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "member-access": false,
        "member-ordering": false,
        "curly": false,
        "ban-types": true,
        "max-line-length": [true, 200]
    },
    "rulesDirectory": []
}